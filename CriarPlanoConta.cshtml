

@model PlanoContaModel



<h3>Criar Plano de Conta</h3>

<form asp-controller="PlanoConta" asp-action="CriarPlanoConta">

    <div class="form-group">
        <label> Descrição</label>
        <input type="text" class="form-control" asp-for="Descricao" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tipo:</label>

        <div class="form-check">
            <label><input class="form-check-input" type="radio" asp-for="Tipo" value="Receita" checked /> Receita </label>
        </div>

        <div class="form-check">
            <label><input class="form-check-input" type="radio" asp-for="Tipo" value="Despesa" unchecked /> Despesa </label>
        </div>



        <!-- <div class="form-check">

            <label> <input class="form-check-input" type="radio" name="exampleRadios" asp-for="Tipo" value="Receita" checked>Receita</label>
        </div>

        <div class="form-check">
            <label><input class="form-check-input" type="radio"  asp-for="Tipo" value="Despesa" />Despesa</label>

        </div> -->
    </div>
    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>
