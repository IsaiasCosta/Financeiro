

@model UsuarioModel



<h2> Registrar Conta</h2>
<br />
<form asp-controller="Usuario" asp-action="Registrar">
    <div class="mb-3 mt-3">
        <label for="email" class="form-label">Nome:</label>
        <input type="text" class="form-control" asp-for="Nome">
        <span asp-validation-for="Nome  " class="text-danger"></span>
    </div>
    <div class="mb-3 mt-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" class="form-control" asp-for="Email">
        <span asp-validation-for="Email  " class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="pwd" class="form-label">Senha:</label>
        <input type="password" class="form-control" asp-for="Senha">
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="pwd" class="form-label">Data de Nascimento:</label>
        <input type="date" class="form-control" asp-for="Data_Nasc">
        <span asp-validation-for="Data_Nasc " class="text-danger"></span>
    </div>
    <br />
    
        <button type="submit" class="btn btn-block  btn-success">Registrar</button>
   
    
</form>

